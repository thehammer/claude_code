{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash",
      "Bash(~/.claude/lib/*.sh:*)",
      "Bash(aws_:*)",
      "Bash(bitbucket_:*)",
      "Bash(carefeed_:*)",
      "Bash(datadog_:*)",
      "Bash(extract_:*)",
      "Bash(get_:*)",
      "Bash(github_:*)",
      "Bash(infer_:*)",
      "Bash(is_:*)",
      "Bash(jira_:*)",
      "Bash(m365:*)",
      "Bash(mv:*)",
      "Bash(op_:*)",
      "Bash(sentry_:*)",
      "Bash(show_:*)",
      "Bash(slack_:*)",
      "Bash(validate_:*)",
      "Bash(vscode_:*)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "mcp__bitbucket__bb_add_pr",
      "mcp__bitbucket__bb_get_pipeline",
      "mcp__bitbucket__bb_get_pr",
      "mcp__bitbucket__bb_list_pipeline_steps",
      "mcp__bitbucket__bb_list_pipelines",
      "mcp__bitbucket__bb_ls_prs",
      "mcp__bitbucket__bb_update_pr",
      "mcp__jira__jira_create_issue",
      "mcp__jira__jira_get_create_meta",
      "mcp__jira__jira_get_issue",
      "mcp__jira__jira_get_transitions",
      "mcp__jira__jira_ls_issues",
      "mcp__jira__jira_transition_issue",
      "Read(//**)",
      "WebFetch(**)",
      "WebFetch(domain:**)",
      "WebSearch",
      "Write(**)"
    ],
    "deny": [
      "Bash(DROP DATABASE:*)",
      "Bash(git push --force:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~:*)"
    ],
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(gh pr merge:*)",
      "Bash(git push:*)",
      "Bash(mv /dev/null:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(su:*)",
      "Bash(sudo /dev/null:*)",
      "Bash(sudo rm:*)",
      "Bash(sudo rmdir:*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
    "jira": {
      "type": "http",
      "url": "http://localhost:3000/mcp"
    },
    "bitbucket": {
      "type": "http",
      "url": "http://localhost:3001/mcp"
    }
  }
}
