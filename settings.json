{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "mcpServers": {
    "jira": {
      "type": "http",
      "url": "http://localhost:3000"
    }
  },
  "permissions": {
    "allow": [
      "Read(//**)",
      "Glob(**)",
      "Grep(**)",
      "Edit(**)",
      "Write(**)",
      "WebSearch(**)",
      "WebFetch(**)",
      "Bash(*)",
      "Bash(bitbucket_*:*)",
      "Bash(jira_*:*)",
      "Bash(slack_*:*)",
      "Bash(sentry_*:*)",
      "Bash(datadog_*:*)",
      "Bash(aws_*:*)",
      "Bash(github_*:*)",
      "Bash(op_*:*)",
      "Bash(carefeed_*:*)",
      "Bash(vscode_*:*)",
      "Bash(is_*:*)",
      "Bash(get_*:*)",
      "Bash(validate_*:*)",
      "Bash(extract_*:*)",
      "Bash(infer_*:*)",
      "Bash(show_*:*)",
      "Bash(~/.claude/lib/*.sh:*)"
    ],
    "deny": [
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf /:*)",
      "Bash(git push --force:*)",
      "Bash(DROP DATABASE:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr merge:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(mv:* /dev/null)",
      "Bash(sudo:* /dev/null)",
      "Bash(sudo rm:*)",
      "Bash(sudo rmdir:*)",
      "Bash(su:*)"
    ]
  }
}
