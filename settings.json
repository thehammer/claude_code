{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "mcpServers": {
    "jira": {
      "type": "http",
      "url": "http://localhost:3000/mcp"
    },
    "bitbucket": {
      "type": "http",
      "url": "http://localhost:3001/mcp"
    }
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "Read(//**)",
      "WebFetch(domain:**)",
      "WebSearch",
      "Write(**)"
    ],
    "deny": [
      "Bash(DROP DATABASE:*)",
      "Bash(git push --force:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~:*)"
    ],
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(gh pr merge:*)",
      "Bash(git push:*)",
      "Bash(mv /dev/null:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(su:*)",
      "Bash(sudo /dev/null:*)",
      "Bash(sudo rm:*)",
      "Bash(sudo rmdir:*)"
    ]
  }
}
